#!/usr/bin/bash
alias ls="lsd -la"
alias cat="bat --theme=Nord"
alias vim="nvim"
# alias vim="lvim"

# dotfiles
alias dot="git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"
alias dstatus="dot status" 
alias dmod="dstatus | grep modified:"
alias dpush="dot push"
alias dadd="dot add"

# git
alias gfa="git fetch --all"
alias gm="git merge"
alias gp="git push"
alias gpl="git pull"

# kubernetes
alias kgp="kubectl get po"
alias klogs="kubectl logs -f"
alias kns="kubens"

# tmux
alias tmux="TERM=screen-256color-bce tmux"
